<%= render 'sadhna_cards/header' %>
<div class="login container">

	<% provide(:title, "Log in") %>

	<div class="login_row row">
	  <div class="col-md-6 col-md-offset-3 log_in">

	    <%= form_for(:session, url: login_path) do |f| %>

	      <%= f.label :email %>
	      <%= f.email_field :email, class: 'form-control' %>

	      <%= f.label :password %>
	      <%= f.password_field :password, class: 'form-control' %>

	      <br>

	      <%= f.submit "Log in", class: "btn btn-primary" %>

	    <% end %>
	    <br>
	    
	  </div>

	  <div>
	   <button class="btn btn-primary new_account">New Account?</button>
	  </div>


	  <div class="col-md-6 col-md-offset-3 sign_up">

	    <%= form_for(:session, url: login_path) do |f| %>

	      <%= f.label :email %>
	      <%= f.email_field :email, class: 'form-control' %>

	      <%= f.label :password %>
	      <%= f.password_field :password, class: 'form-control' %>

	      <%= f.label :name %>
	      <%= f.text_field :name, class: 'form-control' %>
	      <br>

	      <%= f.submit "Sign Up", class: "btn btn-primary" %>

	    <% end %>
	    
	  </div>

	  <div class="login_bg">
	  </div>
	  	
	</div> 
</div>
<script type="text/javascript">

$(document).ready(function(){
  $(".sign_up").hide()
  $(".new_account").click(function(e){
    $(".log_in").hide()
    $(".new_account").hide()
  
    $(".sign_up").show()
  })

});

</script>

<style type="text/css">
	@media (min-width:320px) {
		.login_bg {
			height: 350px;
		}

		.login_row {
			margin-top: 250px;
		}
	}

	@media (min-width:960px) {
		.login_bg {
			height: 800px;
		}

		.login_row {
			margin-top: 100px;
		}
	}




</style>